<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.repository.BoardUserMapper">

	<resultMap id="BoardUserResultMap"  type="com.example.demo.entity.BoardUser">
		<id property="id" column="id" />
		<result property="username" column="username" />
		<result property="password" column="password" />
		<result property="authority" column="authority" />
	</resultMap>
	<!-- 全ユーザー取得 -->
	<select id="selectUserAll" resultType="com.example.demo.entity.BoardUser"
				resultMap="BoardUserResultMap">
		SELECT * FROM users 
	</select>
	
	<!-- 個別取得 -->
	<select id="selectUserByUserName" resultType="com.example.demo.entity.BoardUser"
 				 resultMap="BoardUserResultMap">
		SELECT * FROM users WHERE username  = #{username}
	</select>
	
	<!-- ユーザー登録 -->
	<insert id="insertUser">
		INSERT INTO users (username,password,authority) 
		VALUES(#{username},#{password},#{authority}::role )
	</insert>
	
	<!-- ユーザー情報更新 -->
	<update id="updateUser">
		UPDATE users SET username = #{username}, password = #{password}
		,authority = #{authority} WHERE id =#{id}
	</update>
	
	<!-- ユーザー削除 -->
	<delete id="deleteUser">
		DELETE FROM users WHERE id = #{id}
	</delete>
</mapper>